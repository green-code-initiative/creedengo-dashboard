{
  "name": "@creedengo/vue-dashboard",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "executionEnv": {
    "nodeVersion": "22.17.1"
  },
  "exports": {
    "./script": "./dist/view.js",
    "./stylesheet": "./dist/view.css" 
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite build && vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "coverage": "vitest run --coverage",
    "serve:sonar": "node src/api/sonar/mock/server.js",
    "sonar": "pnpm coverage && pnpm exec sonar-scanner -Dsonar.login=$SONAR -Dsonar.host.url=http://localhost:9000",
    "lint": "eslint src --fix",
    "format": "prettier --write src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o docs"
  },
  "dependencies": {
    "@creedengo/sonar-services": "workspace:*",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@creedengo/core-services": "workspace: *",
    "@creedengo/sonar-services": "workspace: *",
    "@creedengo/vue-ui": "workspace: *",
    "@creedengo/eslint-config": "workspace: *",
    "@creedengo/playwright-config": "workspace:*",
    "@creedengo/vitest-config": "workspace:*",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-coverage": "^2.0.0",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-links": "^9.0.18",
    "@storybook/builder-vite": "^9.0.18",
    "@storybook/vue3": "^9.0.18",
    "@storybook/vue3-vite": "^9.0.18",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.32.0",
    "eslint-plugin-playwright": "^2.2.1",
    "eslint-plugin-storybook": "^9.0.18",
    "eslint-plugin-vue": "^10.3.0",
    "jest": "^30.0.5",
    "jsdom": "^26.1.0",
    "msw": "^2.10.2",
    "msw-storybook-addon": "^2.0.5",
    "@playwright/test": "^1.54.1",
    "sonarqube-scanner": "^4.3.0",
    "storybook": "^9.0.18",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "packageManager": "pnpm@10.13.1"
}
